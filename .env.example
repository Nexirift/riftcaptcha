# Server Configuration
PORT=3000
NODE_ENV=development
REDIRECT_INDEX=https://github.com/Nexirift/riftcaptcha

# Security
HMAC_KEY=your-secure-hmac-key-minimum-32-characters-long

# Multiple keys can be provided as comma-separated values
SITE_KEYS=site-key-1,site-key-2,site-key-3
SECRET_KEYS=secret-key-1-min-32-chars-long,secret-key-2-min-32-chars-long,secret-key-3-min-32-chars-long
REQUIRE_KEYS=false

# Challenge Configuration
MAX_NUMBER=100000
SALT_LENGTH=12
ALGORITHM=SHA-256
CHALLENGE_EXPIRY=300000

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGIN=*
CORS_METHODS=GET,POST,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=50

# Response Customization
INCLUDE_TIMESTAMP=true
VERBOSE_ERRORS=false

# Logging
LOG_LEVEL=info
LOG_CHALLENGES=false
LOG_VERIFICATIONS=false
